{
  "name": "@kalibr/sdk",
  "version": "0.0.2-alpha",
  "description": "Zero-dependency TypeScript SDK for Kalibr LLM observability",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "node --import tsx --test src/kalibr.test.ts",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "kalibr",
    "llm",
    "observability",
    "openai",
    "anthropic",
    "tracing",
    "monitoring",
    "ai",
    "sdk"
  ],
  "author": "Kalibr AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kalibr-ai/kalibr-sdk-ts.git"
  },
  "homepage": "https://github.com/kalibr-ai/kalibr-sdk-ts#readme",
  "bugs": {
    "url": "https://github.com/kalibr-ai/kalibr-sdk-ts/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
